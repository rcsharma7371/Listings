<%= layout('/layouts/boilerplate') %>
<body>
  <div class="container">
    <h3>All Listings</h3>
    <br />
    <div class="listing-container row">
      <%for(let listing of allListing) { %>
      <a href="/listing/<%= listing._id %>" class="listing-link col-lg-3 col-md-4 col-sm-6">
        <div class="card ">
          <img src= <%=listing.image %> class="card-img-top card-img" alt="hotel-ref-pic">
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-title"><b><%= listing.title %></b></p>
            <p class="card-text">
              <small class="text-body-secondary"><%= listing.location %></small
              >&nbsp;&nbsp;&nbsp;<small class="text-body-secondary"
                >â‚¹ <%= listing.price.toLocaleString("en-IN") %> / night</small
              >
              <!-- toLocalString("en-IN") -> It converts number into indian number format, basically it seprates numbers with commas -->
            </p>
          </div>
        </div>
      </a>
      <% } %>
    </div>
  </div>
</body>
